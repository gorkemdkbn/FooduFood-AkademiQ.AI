@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0 text-dark">Kategori Yönetimi</h2>
            <p class="text-muted small mb-0">Ürünlerinizi gruplandırmak için kategorileri buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Category/CreateCategory" class="btn btn-primary px-4 shadow-sm" style="border-radius: 10px;">
            <i class="fas fa-plus-circle me-2"></i> Yeni Kategori Oluştur
        </a>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table id="categoryTable" class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 5%">#</th>
                            <th style="width: 65%">Kategori Adı</th>
                            <th class="text-end" style="width: 30%">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td class="text-center fw-bold text-muted">@count</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3 bg-soft-primary text-primary d-flex align-items-center justify-content-center"
                                             style="width: 35px; height: 35px; background-color: #e7f1ff; border-radius: 8px;">
                                            <i class="fas fa-folder-open"></i>
                                        </div>
                                        <span class="fw-semibold text-dark">@item.Name</span>
                                    </div>
                                </td>
                                <td class="text-end">
                                    <a href="/Category/UpdateCategory/@item.Id" class="btn btn-soft-info btn-sm me-2"
                                       style="background-color: #e1f5fe; color: #039be5; border: none; padding: 8px 15px; border-radius: 8px;" title="Düzenle">
                                        <i class="fas fa-edit me-1"></i> Düzenle
                                    </a>
                                    <a href="/Category/DeleteCategory/@item.Id"
                                       onclick="return confirm('@item.Name kategorisini silmek istediğinize emin misiniz?')"
                                       class="btn btn-soft-danger btn-sm"
                                       style="background-color: #ffebee; color: #e53935; border: none; padding: 8px 15px; border-radius: 8px;" title="Sil">
                                        <i class="fas fa-trash-alt me-1"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<style>
    /* Tablo Satırı Hover Efekti */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: all 0.2s ease;
    }

    /* DataTables Arama Kutusu Modernizasyonu */
    .dataTables_filter input {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 5px 12px;
        margin-left: 10px;
    }

    .dataTables_length select {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 5px;
    }
</style>