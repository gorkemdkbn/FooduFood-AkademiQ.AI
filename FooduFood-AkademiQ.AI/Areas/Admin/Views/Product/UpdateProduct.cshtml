@model UpdateProductDto
@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-1"><i class="fas fa-edit text-primary me-2"></i>Ürünü Düzenle</h2>
                    <p class="text-muted small">Ürün bilgilerini güncelleyebilir ve satış durumunu yönetebilirsiniz.</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                    <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>

            <form method="post" class="needs-validation">
                <input type="hidden" asp-for="Id" />

                <div class="row g-4">

                    <div class="col-md-8">
                        <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 15px;">
                            <h5 class="mb-4 text-primary fw-bold">Temel Bilgiler</h5>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Ürün Adı</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-shopping-basket text-muted"></i></span>
                                    <input type="text" asp-for="ProductName" class="form-control border-start-0 bg-light" />
                                </div>
                                <span class="text-danger small" asp-validation-for="ProductName"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Ürün Açıklaması</label>
                                <textarea asp-for="Description" class="form-control bg-light" rows="5"></textarea>
                                <span class="text-danger small" asp-validation-for="Description"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Kategori</label>
                                    <select asp-for="CategoryId" class="form-select bg-light" asp-items="@ViewBag.categories">
                                        <option value="" disabled>Kategori Seçiniz</option>
                                    </select>
                                    <span class="text-danger small" asp-validation-for="CategoryId"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Görsel URL</label>
                                    <input type="text" asp-for="ImageUrl" id="imageUrlInput" class="form-control bg-light" />
                                    <span class="text-danger small" asp-validation-for="ImageUrl"></span>
                                </div>
                            </div>

                            <div class="mb-0">
                                <label class="form-label fw-semibold">İçindekiler <span class="text-muted fw-normal">(Virgülle ayırın)</span></label>
                                <textarea asp-for="Ingredients" class="form-control bg-light" rows="2"></textarea>
                                <span class="text-danger small" asp-validation-for="Ingredients"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm p-3 mb-4 text-center" style="border-radius: 15px;">
                            <label class="form-label fw-semibold d-block text-start mb-3">Mevcut Görsel</label>
                            <img id="previewImage" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/150" : Model.ImageUrl)"
                                 class="img-fluid rounded shadow-sm" style="max-height: 180px; object-fit: cover;" />
                        </div>

                        <div class="card border-0 shadow-sm p-4 mb-4" style="border-radius: 15px;">
                            <h5 class="mb-3 text-success fw-bold">Fiyatlar</h5>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Yarım Porsiyon</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" asp-for="PriceHalf" class="form-control bg-light font-monospace" />
                                    <span class="input-group-text">₺</span>
                                </div>
                            </div>
                            <div class="mb-0">
                                <label class="form-label small fw-bold">Tam Porsiyon</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" asp-for="PriceFull" class="form-control bg-light font-monospace" />
                                    <span class="input-group-text">₺</span>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm p-4" style="border-radius: 15px;">
                            <h5 class="mb-3 text-warning fw-bold">Ayarlar</h5>
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" asp-for="IsAvailable" class="form-check-input" />
                                <label class="form-check-label fw-semibold">Satışta mı?</label>
                            </div>
                            <div class="form-check form-switch">
                                <input type="checkbox" asp-for="IsPopular" class="form-check-input" />
                                <label class="form-check-label fw-semibold">Popüler Ürün</label>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card border-0 shadow-sm p-4" style="border-radius: 15px;">
                            <div class="row">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label class="form-label fw-semibold">Ağırlık</label>
                                    <input type="text" asp-for="Weight" class="form-control bg-light" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Ölçüler</label>
                                    <input type="text" asp-for="Dimensions" class="form-control bg-light" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 text-end mt-4">
                        <hr class="mb-4 opacity-10">
                        <a asp-action="Index" class="btn btn-light btn-lg px-4 me-2" style="border-radius: 12px;">İptal</a>
                        <button type="submit" class="btn btn-primary btn-lg shadow px-5" style="border-radius: 12px;">
                            <i class="fas fa-sync-alt me-2"></i> Değişiklikleri Kaydet
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>



<style>
    body {
        background-color: #f8f9fa;
    }

    .form-control, .form-select {
        border: 1px solid #e9ecef;
        padding: 0.75rem;
        border-radius: 10px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.05);
            background-color: #fff;
        }

    .input-group-text {
        border-color: #e9ecef;
        border-radius: 10px;
    }

    .form-check-input {
        width: 3em;
        height: 1.5em;
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: #198754;
            border-color: #198754;
        }
</style>