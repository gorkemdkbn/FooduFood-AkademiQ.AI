@model CreateProductDto
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-1">Yeni Ürün Oluştur</h2>
                    <p class="text-muted small">Sisteme yeni bir ürün eklemek için aşağıdaki bilgileri doldurun.</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                    <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>

            <form method="post" class="needs-validation" novalidate>
                <div class="row g-4">

                    <div class="col-md-8">
                        <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 15px;">
                            <h5 class="mb-4 text-primary fw-bold"><i class="fas fa-info-circle me-2"></i>Genel Bilgiler</h5>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Ürün Adı</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-tag text-muted"></i></span>
                                    <input type="text" asp-for="ProductName" class="form-control border-start-0 bg-light" placeholder="Ürün adını giriniz..." />
                                </div>
                                <span class="text-danger small" asp-validation-for="ProductName"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Ürün Açıklaması</label>
                                <textarea asp-for="Description" class="form-control bg-light" rows="4" placeholder="Ürün hakkında detaylı bilgi verin..."></textarea>
                                <span class="text-danger small" asp-validation-for="Description"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Kategori</label>
                                    <select asp-for="CategoryName" class="form-select bg-light" asp-items="@ViewBag.categories">
                                        <option value="" selected disabled>Seçiniz...</option>
                                    </select>
                                    <span class="text-danger small" asp-validation-for="CategoryName"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Görsel URL</label>
                                    <input type="text" asp-for="ImageUrl" id="imageUrlInput" class="form-control bg-light" placeholder="https://..." />
                                    <span class="text-danger small" asp-validation-for="ImageUrl"></span>
                                </div>
                            </div>

                            <div class="mb-0">
                                <label class="form-label fw-semibold">İçindekiler <span class="text-muted fw-normal">(Virgülle ayırın)</span></label>
                                <textarea asp-for="Ingredients" class="form-control bg-light" rows="2" placeholder="un, yumurta, süt..."></textarea>
                                <span class="text-danger small" asp-validation-for="Ingredients"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm p-4 mb-4" style="border-radius: 15px;">
                            <h5 class="mb-4 text-success fw-bold"><i class="fas fa-lira-sign me-2"></i>Fiyatlandırma</h5>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Yarım Porsiyon</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" asp-for="PriceHalf" class="form-control bg-light" placeholder="0.00" />
                                    <span class="input-group-text">₺</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Tam Porsiyon</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" asp-for="PriceFull" class="form-control bg-light" placeholder="0.00" />
                                    <span class="input-group-text">₺</span>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm p-3 mb-4 text-center" style="border-radius: 15px;">
                            <label class="form-label fw-semibold d-block text-start mb-3">Görsel Önizleme</label>
                            <img id="previewImage" src="https://via.placeholder.com/150?text=Görsel+Yok" class="img-fluid rounded shadow-sm" style="max-height: 150px; object-fit: cover;" />
                        </div>

                        <div class="card border-0 shadow-sm p-4" style="border-radius: 15px;">
                            <h5 class="mb-3 text-warning fw-bold"><i class="fas fa-cog me-2"></i>Seçenekler</h5>
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" asp-for="IsAvailable" class="form-check-input" checked />
                                <label class="form-check-label fw-semibold">Satışa Açık</label>
                            </div>
                            <div class="form-check form-switch">
                                <input type="checkbox" asp-for="IsPopular" class="form-check-input" />
                                <label class="form-check-label fw-semibold">Popüler Ürün</label>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card border-0 shadow-sm p-4" style="border-radius: 15px;">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Ağırlık Bilgisi</label>
                                    <input type="text" asp-for="Weight" class="form-control bg-light" placeholder="Örn: 500g" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Boyut Bilgisi</label>
                                    <input type="text" asp-for="Dimensions" class="form-control bg-light" placeholder="Örn: 20x15x10 cm" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 text-end mt-3">
                        <button type="submit" class="btn btn-primary btn-lg shadow px-5" style="border-radius: 12px;">
                            <i class="fas fa-save me-2"></i> Ürünü Kaydet
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>



<style>
    body {
        background-color: #f4f7f6;
    }

    .form-control, .form-select {
        border: 1px solid #e0e0e0;
        padding: 0.6rem 0.8rem;
        border-radius: 10px;
    }

        .form-control:focus, .form-select:focus {
            background-color: #fff;
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
        }

    .input-group-text {
        border: 1px solid #e0e0e0;
        border-radius: 10px;
    }

    .form-check-input {
        width: 3em;
        height: 1.5em;
        cursor: pointer;
    }

    .form-check-label {
        cursor: pointer;
        padding-left: 5px;
        padding-top: 2px;
    }
</style>